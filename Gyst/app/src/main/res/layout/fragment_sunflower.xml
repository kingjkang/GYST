<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gyst.justinkang.gyst.Sunflower">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/frag_sunflower" />-->

    <TextView
        android:id="@+id/streakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:text="Streak: " />

    <TextView
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:text="0"
        android:layout_gravity="left|top" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Streak"
        android:id="@+id/testButton"
        android:layout_gravity="right|bottom"
        android:onClick="updateFlower"/>

    <ImageView
        android:id="@+id/sunflower"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/sunflowerseedtest"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Streak"
        android:id="@+id/resetStreak"
        android:layout_gravity="left|bottom" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase Petals"
        android:id="@+id/increasePetals"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="40dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Petals"
        android:id="@+id/resetPetals"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="40dp"/>


</FrameLayout>

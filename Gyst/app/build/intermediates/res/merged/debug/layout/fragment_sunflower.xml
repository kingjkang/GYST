<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gyst.justinkang.gyst.Sunflower">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/frag_sunflower" />-->

    <TextView
        android:id="@+id/streakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:text="Streak: " />

    <TextView
        android:id="@+id/streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:text="0"
        android:layout_gravity="left|top" />
    <ImageView
        android:id="@+id/sunflower"
        android:layout_width="match_parent"
        android:layout_height="366dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/sunflower0"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attended Event"
        android:id="@+id/attendedEvent"
        android:layout_gravity="right|bottom"
        />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Missed Event"
        android:id="@+id/missedEvent"
        android:layout_gravity="left|bottom" />




</FrameLayout>
